<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    layout_height="match_parent"
    layout_width="match_parent">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/main_weather_background"
        android:elevation="@dimen/main_weather_elevation">

        <ImageView
            android:id="@+id/today_imageView"
            android:layout_width="wrap_content"
            android:layout_height="102dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:padding="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/today_textViewCountry" />

        <TextView
            android:id="@+id/today_textViewTemp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="textViewTemp"
            app:layout_constraintStart_toEndOf="@+id/space"
            app:layout_constraintTop_toBottomOf="@+id/today_textViewDt" />

        <TextView
            android:id="@+id/today_textViewHumidity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:text="textViewHumidity"
            app:layout_constraintEnd_toStartOf="@+id/today_space2"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/space"
            app:layout_constraintTop_toBottomOf="@+id/today_textViewWindDeg" />

        <TextView
            android:id="@+id/today_textViewSunset"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="4dp"
            android:text="today_textViewSunset"
            app:layout_constraintStart_toEndOf="@+id/today_space2"
            app:layout_constraintTop_toBottomOf="@+id/today_textViewPressure" />

        <TextView
            android:id="@+id/today_textViewMinTemp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="textViewMinTemp"
            app:layout_constraintStart_toEndOf="@+id/space"
            app:layout_constraintTop_toBottomOf="@+id/today_textViewTemp" />

        <TextView
            android:id="@+id/today_textViewClouds"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="textViewClouds"
            app:layout_constraintStart_toEndOf="@+id/today_space2"
            app:layout_constraintTop_toBottomOf="@+id/today_textViewSunset" />

        <TextView
            android:id="@+id/today_textViewWindDeg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="textViewWindDeg"
            app:layout_constraintStart_toEndOf="@+id/space"
            app:layout_constraintTop_toBottomOf="@+id/today_textViewMinTemp" />

        <TextView
            android:id="@+id/today_textViewMaxTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:text="textViewMaxTemp"
            app:layout_constraintStart_toEndOf="@+id/today_space2"
            app:layout_constraintTop_toBottomOf="@+id/today_textViewWeather" />

        <TextView
            android:id="@+id/today_textViewWindSpeed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="textViewWindSpeed"
            app:layout_constraintStart_toEndOf="@+id/today_space2"
            app:layout_constraintTop_toBottomOf="@+id/today_textViewMaxTemp" />

        <Space
            android:id="@+id/today_space2"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/today_imageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/today_textViewPressure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="textViewPressure"
            app:layout_constraintStart_toEndOf="@+id/today_space2"
            app:layout_constraintTop_toBottomOf="@+id/today_textViewWindSpeed" />

        <TextView
            android:id="@+id/today_textViewWeather"
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="textViewWeather"
            app:layout_constraintStart_toEndOf="@+id/today_textViewCountry"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/today_textViewCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="City"
            app:layout_constraintEnd_toStartOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/today_textViewDt"
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:text="today_textViewDt"
            app:layout_constraintStart_toEndOf="@+id/space"
            app:layout_constraintTop_toBottomOf="@+id/today_imageView" />

        <TextView
            android:id="@+id/today_textViewSunrise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:text="today_textViewSunrise"
            app:layout_constraintEnd_toStartOf="@+id/today_space2"
            app:layout_constraintHorizontal_bias="0.24"
            app:layout_constraintStart_toEndOf="@+id/space"
            app:layout_constraintTop_toBottomOf="@+id/today_textViewHumidity" />

        <TextView
            android:id="@+id/today_textViewCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="country"
            app:layout_constraintStart_toEndOf="@+id/today_textViewCity"
            app:layout_constraintTop_toTopOf="@+id/today_textViewCity" />

        <Space
            android:id="@+id/space"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/today_space2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />
    </android.support.constraint.ConstraintLayout>
</layout>